{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "~vars/*": ["src/vars/*.less"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "typeRoots": ["./types"]
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
}
